<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="egovframework.example.cmmn.MyList.service.ListMapper">
	
	<!-- 게시글 목록 조회 -->
	<select id="selectList"
		parameterType="egovframework.example.cmmn.MyList.vo.ListVo"
		resultType="egovframework.example.cmmn.MyList.vo.ListVo">
		SELECT * FROM test
		ORDER BY testId DESC
	</select>
	
	<!-- 게시글 상세보기 -->
	<select id="selectDetail" parameterType="Integer" resultType="egovframework.example.cmmn.MyList.vo.ListVo">
		SELECT * FROM test
		WHERE testId = #{testId}
	</select>
	
	<!-- 게시글 쓰기 -->
	<insert id="insertList" parameterType="egovframework.example.cmmn.MyList.vo.ListVo">
		INSERT INTO test(testTitle, testContent, testName, testDate)
		WHERE testId = #{testId}
	</insert>
	
	<!-- 게시글 수정 -->
	<update id="updateList" parameterType="egovframework.example.cmmn.MyList.vo.ListVo">
		UPDATE test SET
		 testTitle = #{testTitle}, testContent = #{tsetContent}
		WHERE testId = #{testId}
	</update>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteList" parameterType="Integer">
		DELETE FROM test
		WHERE testId = #{testId}
	</delete>
	
</mapper>
